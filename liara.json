{
  "app": "chatbot-mobile",
  "port": 3000,
  "platform": "node",
  "node": {
    "mirror": false
    "version": "22"
  },
  "build": {
    "location": "iran",
    "buildCommand": "npm ci --only=production --no-audit --no-fund --timeout=300000 && npm run build"
  },
  "environments": [
    {
      "name": "production"
    }
  ],
  "disks": [],
  "healthCheck": {
    "path": "/api/database/test",
    "port": 3000,
    "initialDelaySeconds": 30,
    "periodSeconds": 10
  }
}
